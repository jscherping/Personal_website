				});
				google.maps.event.addListener(annArbor, 'mouseout', function() {
					annArborInfo.close(map,annArbor);
				});
				google.maps.event.addListener(annArbor, 'click', function() {
					window.location = "http://www.umich.edu"
				});
				var tokyo = new google.maps.Marker({position:new google.maps.LatLng(35.6833,139.7667), map:map, title: "Tokyo", icon:'http://chart.apis.google.com/chart?chst=d_map_pin_letter&chld=E|FFFFFF|800000'});
				var tokyoInfo = new InfoBox({content: "Tokyo - 2001", boxStyle:theBoxStyle});
				google.maps.event.addListener(tokyo, 'mouseover', function() {
					tokyoInfo.open(map,tokyo);
				});
				google.maps.event.addListener(tokyo, 'mouseout', function() {
					tokyoInfo.close(map,tokyo);
				});
			}
